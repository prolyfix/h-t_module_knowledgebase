{% extends 'widget/_skeleton.html.twig' %}
{% block controller %}
note
{% endblock %}
{% block card_widgets %}
	<span href="javascript: void(0);" data-action="click->note#save">
		<i class="mdi mdi-floppy"></i>
	</span>
{% endblock %}
{% block content %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/trix@1.3.1/dist/trix.css">
	<script src="https://cdn.jsdelivr.net/npm/trix@1.3.1/dist/trix.js"></script>
	<style>
		trix-editor {
			margin-top: 1rem;
			margin-bottom: 1rem;
			min-height: 150px;
		}
		trix-toolbar {
			display: none;
			> [data-trix-action="bold"] {
				display: inline-block;
			}
		</style>
	{% for entry in notes %}
			<div>
				<form>
					<input id="x" type="hidden" name="content">
                    <input type="hidden" name="note_id" id="note_id" value="{{ entry.id }}">
					<trix-editor input="x" id="note_content">
						{{ entry.note | raw}}
					</trix-editor>
				</form>
			</div>
		{% endfor %}
	{% endblock %}
